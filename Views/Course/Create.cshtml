@model Course

@{
  ViewData["Title"] = "Creating a course";
  Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>
<h2>@ViewBag.extraMessage</h2>
<div asp-validation-summary="All"></div>
<form method="post">
  <div>
    <label asp-for="Name">Name</label>
    <input asp-for="Name" />
  </div>
  <div>
    <label asp-for="Address">Address</label>
    <input asp-for="Address" />
  </div>
  <div>
    <label asp-for="typeWorkDay">typeWorkDay</label>
    @Html.DropDownList(
      "typeWorkDay",
      Html.GetEnumSelectList<TypeWorkDay>(),
      "Select",
      new {@class = "form-control"}
    )
  </div>
  <input type="submit" />
</form>